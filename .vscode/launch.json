{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "FastAPI Debug",
          "type": "python",
          "request": "launch",
          "module": "uvicorn",
          "args": [
              "api_server:app",
              "--host", "0.0.0.0",
              "--port", "8000",
              "--reload"
          ],
          "cwd": "${workspaceFolder}",
          "env": {
              "PYTHONPATH": "${workspaceFolder}"
          }
      }
  ]
}